{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": true, // Allow JavaScript files
    "checkJs": false, // Don't type-check JavaScript files
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "types": ["vitest"]
  },
  "include": ["src", "vite.config.ts", "vite-env.d.ts", "server.js"],
  "exclude": ["node_modules", "dist", "eslint.config.js"]
}
